<%- include('partials/header') %>
    <link rel="stylesheet" href="/assets/css/admin-profile.css">

    <main>
        <section>
            <h1>Admin Profile</h1>
            <nav>
                <a href="/admin-dashboard">Dashboard</a>
                <a href="/add-item">Add Item</a>
                <a href="/logout">Logout</a>
            </nav>
            <div class="profile-container">
                <h2>Profile Details</h2>
                <form action="/admin-profile" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div>
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" value="<%= user.name %>" required>
                    </div>
                    <div>
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" value="<%= user.email %>" required>
                    </div>
                    <div>
                        <label for="photo">Photo</label>
                        <input type="file" id="photo" name="photo" accept="image/*">
                    </div>
                    <div>
                        <label for="mfa">Enable MFA</label>
                        <input type="checkbox" id="mfa" name="mfa" <%=user.mfaEnabled ? 'checked' : '' %>>
                    </div>
                    <div>
                        <label for="notifications">Notification Preferences</label>
                        <select id="notifications" name="notifications">
                            <option value="email" <%=user.notifications==='email' ? 'selected' : '' %>>Email</option>
                            <option value="dashboard" <%=user.notifications==='dashboard' ? 'selected' : '' %>>Dashboard
                            </option>
                        </select>
                    </div>
                    <button type="submit">Update Profile</button>
                </form>
                <a href="/change-password">Change Password</a>
            </div>
        </section>
    </main>

    <%- include('partials/footer') %>
        <script src="/assets/js/admin-profile.js"></script>
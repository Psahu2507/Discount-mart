<%- include('partials/header') %>
    <link rel="stylesheet" href="/assets/css/forgot-password.css">

    <main>
        <section class="forgot-password-form">
            <h1>Reset Your Password</h1>
            <p class="subtitle">Enter your email or phone number to receive a password reset link</p>
            <form id="recoveryForm" action="/forgot-password" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="tab-container">
                    <div class="tab-buttons">
                        <button type="button" class="tab-btn active" data-tab="email-tab">Email</button>
                        <button type="button" class="tab-btn" data-tab="phone-tab">Phone</button>
                    </div>
                    <div class="tab-content active" id="email-tab">
                        <div class="form-group">
                            <label for="email">Email Address</label>
                            <input type="email" id="email" name="email" placeholder="your@email.com">
                        </div>
                    </div>
                    <div class="tab-content" id="phone-tab">
                        <div class="form-group">
                            <label for="phone">Phone Number</label>
                            <input type="tel" id="phone" name="phone" placeholder="(123) 456-7890">
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                    <button type="submit" class="submit-btn">Send Reset Link</button>
                </div>
            </form>
            <div class="back-to-login">
                <p>Remember your password? <a href="/login">Log in here</a></p>
            </div>
        </section>
    </main>

    <%- include('partials/footer') %>
        <script src="/assets/js/forgot-password.js"></script>